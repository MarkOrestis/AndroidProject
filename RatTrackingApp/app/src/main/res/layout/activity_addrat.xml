<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/uniqueKey_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        android:hint="Unique key"
        android:textColorHint="#d3d3d3"
        android:backgroundTint="#d3d3d3"
        android:layout_weight="0.03" />

    <EditText
        android:id="@+id/createDate_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:inputType="date"
        android:hint="Created date"
        android:textColorHint="#d3d3d3"
        android:backgroundTint="#d3d3d3"
        android:layout_weight="0.03" />

    <EditText
        android:id="@+id/locationType_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:hint="Location type"
        android:textColorHint="#d3d3d3"
        android:backgroundTint="#d3d3d3"
        android:layout_weight="0.03" />

    <EditText
        android:id="@+id/zip_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:hint="Zip code"
        android:textColorHint="#d3d3d3"
        android:backgroundTint="#d3d3d3"
        android:layout_weight="0.03" />

    <EditText
        android:id="@+id/address_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:hint="Address"
        android:textColorHint="#d3d3d3"
        android:backgroundTint="#d3d3d3"
        android:layout_weight="0.03" />

    <EditText
        android:id="@+id/city_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="210dp"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:hint="City"
        android:textColorHint="#d3d3d3"
        android:backgroundTint="#d3d3d3"
        android:layout_weight="0.03" />

    <EditText
        android:id="@+id/borough_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="240dp"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:hint="Borough"
        android:textColorHint="#d3d3d3"
        android:backgroundTint="#d3d3d3"
        android:layout_weight="0.03"/>

    <EditText
        android:id="@+id/latitude_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="270dp"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:hint="Latitude"
        android:textColorHint="#d3d3d3"
        android:backgroundTint="#d3d3d3"
        android:layout_weight="0.03" />

    <EditText
        android:id="@+id/longitude_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:hint="Longitude"
        android:textColorHint="#d3d3d3"
        android:backgroundTint="#d3d3d3"
        android:layout_weight="0.03" />

    <Button
        android:id="@+id/addratbutton"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:layout_marginTop="350dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:background="#92cbc5"
        android:text="Add Rat"/>

    <Button
        android:id="@+id/canceladdratbutton"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:layout_marginTop="350dp"
        android:layout_toLeftOf="@id/addratbutton"
        android:layout_marginRight="15dp"
        android:background="#d3d3d3"
        android:text="Cancel"/>

</RelativeLayout>